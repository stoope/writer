    "electron": "^23.1.0",
    "electron-builder": "^22.10.3",
    "svelte": "^3.55.1",
    "svelte-check": "^2.10.3",
    "tslib": "^2.5.0",
    "typescript": "^4.9.3",
    "vite": "^4.1.0"
  },
  "build": {
    "files": [
      "src/**/*"
    ]
  },
  "volta": {
    "node": "18.14.1"
  }
